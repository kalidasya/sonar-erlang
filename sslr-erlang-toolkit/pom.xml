<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <groupId>org.kalidasya.sonar.erlang</groupId>
    <artifactId>erlang</artifactId>
    <version>2.0-SNAPSHOT</version>
  </parent>

  <modelVersion>4.0.0</modelVersion>
  <artifactId>sslr-erlang-toolkit</artifactId>
  <name>Erlang :: SSLR Toolkit</name>

  <dependencies>
    <dependency>
      <groupId>org.kalidasya.sonar.erlang</groupId>
      <artifactId>erlang-squid</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>com.google.guava</groupId>
      <artifactId>guava</artifactId>
    </dependency>
    <dependency>
      <groupId>org.codehaus.sonar.sslr</groupId>
      <artifactId>sslr-toolkit</artifactId>
    </dependency>
    <dependency>
      <groupId>ch.qos.logback</groupId>
      <artifactId>logback-classic</artifactId>
    </dependency>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.easytesting</groupId>
      <artifactId>fest-assert</artifactId>
      <scope>test</scope>
    </dependency>
  </dependencies>
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-jar-plugin</artifactId>
        <version>2.4</version>
        <configuration>
          <archive>
            <manifest>
              <mainClass>org.kalidasya.sonar.sslr.erlang.toolkit.ErlangToolkit</mainClass>
            </manifest>
          </archive>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.sonatype.plugins</groupId>
        <artifactId>jarjar-maven-plugin</artifactId>
        <!-- TODO should be in parent -->
        <version>1.5</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>jarjar</goal>
            </goals>
            <configuration>
              <forceCreation>true</forceCreation>
              <includes>
                <include>org.kalidasya.sonar.erlang:sslr-demo</include>
                <include>org.codehaus.sonar.sslr:sslr-core</include>
                <include>org.codehaus.sonar.sslr:sslr-xpath</include>
                <include>jaxen:jaxen</include>
                <include>org.codehaus.sonar.sslr:sslr-toolkit</include>
                <include>org.codehaus.sonar:sonar-colorizer</include>
                <include>org.codehaus.sonar:sonar-squid</include>
                <include>org.codehaus.sonar:sonar-channel</include>
                <include>org.slf4j:slf4j-api</include>
                <include>org.slf4j:jcl-over-slf4j</include>
                <include>ch.qos.logback:logback-classic</include>
                <include>ch.qos.logback:logback-core</include>
                <include>commons-io:commons-io</include>
                <include>commons-lang:commons-lang</include>
                <include>com.google.collections:google-collections</include>
              </includes>
              <rules>
                <keep>
                  <pattern>*.**</pattern>
                </keep>
              </rules>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

</project>
